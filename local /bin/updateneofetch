#!/usr/bin/env bash

# This script randomly selects a neofetch config file from the given directory,
# moves it to the default config file location, and then runs neofetch.

CONFIG_DIR="$HOME/.config/neofetch"
DEFAULT_CONFIG="$HOME/.config/neofetch/config.conf"

# Find a random config file and move it to the default config file location
CONFIG_FILE="$(find "${CONFIG_DIR}" -type f -name "*.conf" | shuf -n 1)"
cp -f "$CONFIG_FILE" "$DEFAULT_CONFIG" 

# Wait for 1 second to allow the config file to be written before running neofetch
sleep 1
neofetch

